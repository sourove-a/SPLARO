# Core
DB_HOST=localhost
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASS=your_db_password

# SMTP
SMTP_HOST=smtp.hostinger.com
SMTP_PORT=465
SMTP_USER=info@yourdomain.com
SMTP_PASS=your_email_password

# Telegram (Server-side only)
TELEGRAM_BOT_TOKEN=replace_with_new_regenerated_token
TELEGRAM_CHAT_ID=replace_with_admin_chat_id
TELEGRAM_WEBHOOK_SECRET=replace_with_random_secret

# Admin API protection (Next.js /api/admin/*)
ADMIN_KEY=replace_with_strong_admin_key
APP_AUTH_SECRET=replace_with_long_random_secret

# Google Sheets (Next.js backend)
GOOGLE_SHEETS_CLIENT_EMAIL=service-account@project.iam.gserviceaccount.com
GOOGLE_SHEETS_PRIVATE_KEY=\"-----BEGIN PRIVATE KEY-----\\n...\\n-----END PRIVATE KEY-----\\n\"
GOOGLE_SHEET_ID=replace_with_google_sheet_id
GOOGLE_SHEETS_WEBHOOK_URL=https://script.google.com/macros/s/your-id/exec

# Optional Redis cache (preferred)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
REDIS_URL=

# Snapshot tuning
SHEETS_REFRESH_INTERVAL_SECONDS=180
SHEETS_STALE_SECONDS=120
